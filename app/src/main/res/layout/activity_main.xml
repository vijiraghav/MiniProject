<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viji.miniproject.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Packets :"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:id="@+id/emergencyTag"
        android:textColor="#ff0000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/emergencyTag"
        android:text="0"
        android:layout_marginStart="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/emergencyTag"
        android:textColor="#ff0000"
        android:id="@+id/counterTextEmergency"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/normalTag"
        android:layout_alignTop="@+id/normalTag"
        android:text="0"
        android:layout_marginStart="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#00ff2f"
        android:id="@+id/counterTextNormal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Packets        :"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:id="@+id/normalTag"
        android:layout_below="@+id/emergencyTag"
        android:textStyle="bold"
        android:textColor="#00ff2f"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shut Down Pi"
        android:layout_marginBottom="10dp"
        android:onClick="shutDown"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
